  "author": "JosÃ© Luis Navarro Motos",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.14.0"
  },
  "scripts": {
    "dev:notifications:api": "NODE_ENV=development ts-node-dev --ignore-watch node_modules  ./src/notifications/apps/api/index.ts",
    "start:notifications:api": "NODE_ENV=development node  ./dist/src/notifications/apps/api/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.json",
    "build:di": "copyfiles 'src/**/*.{json,yaml,html,png}' dist",
    "build:clean": "rm -r dist; exit 0"
  },
  "_moduleAliases": {
    "@/framework": "dist/src/framework",
    "@/notifications": "dist/src/notifications"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "convict": "^6.2.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.12.1",
    "helmet": "^5.0.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mysql2": "^2.3.0",
    "node-dependency-injection": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.5",
    "ts-node-dev": "^1.1.8",
    "typedi": "^0.10.0",
    "validator": "^13.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
