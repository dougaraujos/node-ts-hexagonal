{
  "name": "motor-services",
  "version": "1.0.0",
  "description": "Hexagonal Architecture in Node.js with TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index",
    "start.dev": "ts-node-dev --respawn src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copyassets": "cp -r assets dist && cp -r src/views dist",
    "copystorage": "cp -r src/storage dist",
    "build": "tsc && npm run copyassets && npm run copystorage",
    "deploy": "npm run build && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jnm733/node-ts-hexagonal.git"
  },
  "author": "Jos√© Luis Navarro Motos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jnm733/node-ts-hexagonal/issues"
  },
  "homepage": "https://github.com/jnm733/node-ts-hexagonal#readme",
  "_moduleAliases": {
    "@/framework": "dist/modules/framework",
    "@/notifications": "dist/modules/notifications"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mysql2": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.5",
    "ts-node-dev": "^1.1.8",
    "typedi": "^0.10.0",
    "validator": "^13.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "copyfiles": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
