{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,

    /* Module Resolution Options */
    "moduleResolution": "node",

    /* Advanced Options */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": false,

    /* Basic Options */
    "declaration": true,
    "declarationMap": true,
    "types": ["reflect-metadata"],
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",

    /* Paths */
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": ["node_modules"]
}
